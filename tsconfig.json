{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "paths": {
         "*": [
            "node_modules/*"
         ]
      }
   },
   "include": [
      "./**/*"
   ]
}
<style type="text/css">
  body {
    font-weight: 200;
  }
  .table-container {
    display: flex;
    align-items: center;
    place-content: center;
  }
  .header {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20px;
    justify-content: center;
  }
  .header * {
    text-align: center;
    margin-bottom: 0;
  }
  .header h1 {
    width: 100%;
  }
  .header p {
    width: 45%;
  }
  table {
    width: 90%;
    border-collapse: collapse;
  }
  thead {
    display: table-header-group;
    break-inside: avoid;
  }
  table thead th {
    padding: 8px 0px;
    margin-top: 50px;
  }
  table tr td, table tbody th {
    border: 1px solid #000;
    padding: 8px;
    font-weight: 200;
    margin: 0px;
  }
</style>
<html>
  <body>
    <div class="header">
      <h1>Reporte - Ingresos al sitio</h1>
      <p style="width: 100%">
        Generado automaticamente por Cloudster
      </p>
      <p style="text-align: left;">
        Solicitado por : {{ username }}
      </p>
      <p style="text-align: right;">
        {{ date }}
      </p>
    </div>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>User ID</th>
            <th>Usuario</th>
            <th>Actividad</th>
            <th>Rultado</th>
            <th>Fecha</th>
          </tr>
        </thead>
        <tbody>
          {{#each data as |reg|}}
          <tr>
            <td>{{reg.performedBy}}</td>
            <td>{{reg.username}}</td>
            <td>{{reg.accion}}</td>
            <th>{{reg.result}}</th>
            <th>{{reg.fecha}}</th>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </body>
</html>